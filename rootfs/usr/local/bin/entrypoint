#!/bin/sh

if [ ! -d /app/headphones ]; then
    echo "'/app/headphones/' directory don't exist"
    FIRST_RUN=true
    echo "clone repository in '/app/headphones'"
    git clone --depth 1 https://github.com/rembo10/headphones.git /app/headphones
    echo "First run need to init /!\\"
    echo "1. Stop the container"
    echo "2. Edit /config/config.ini on host"
    echo "3. Restart the container"
fi

echo "running headphones on master branch"
/usr/bin/python2 /app/headphones/Headphones.py \
    --datadir=/config \
    --config=/config/config.ini \
    --nolaunch
